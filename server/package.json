{
  "name": "intelgraph-server",
  "version": "1.0.0",
  "description": "IntelGraph Platform Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon --inspect=0.0.0.0:9229 server.js",
    "build": "echo 'No build step required'",
    "test": "cross-env NODE_ENV=test jest --testMatch=\"<rootDir>/tests/**/*.test.js\", \"<rootDir>/src/tests/**/*.test.js\"",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --coverageReporters=text --coverageReporters=lcov --coverageReporters=html",
    "test:integration": "cross-env NODE_ENV=test TEST_MODE=integration jest --testPathPattern=integration --runInBand",
    "test:unit": "cross-env NODE_ENV=test jest --testPathPattern=unit --testPathIgnorePatterns=integration",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:performance:war-room": "jest --testNamePattern='War Room.*latency' --verbose",
    "test:federation": "jest --testPathPattern=federatedSearch --verbose",
    "test:multimodal": "jest --testPathPattern=multimodalData --verbose",
    "test:ai-extraction": "jest --testPathPattern=aiExtraction --verbose",
    "test:copilot": "jest --testPathPattern=copilotOrchestration --verbose",
    "test:simulation": "jest --testPathPattern=simulationEngine --verbose",
    "test:p0-critical": "npm run test:performance:war-room && npm run test:federation && npm run test:multimodal && npm run test:ai-extraction && npm run test:copilot && npm run test:simulation",
    "lint": "eslint --no-ignore src/**/*.js scripts/*.js tests/*.js server.js",
    "lint:fix": "eslint --no-ignore src/**/*.js scripts/*.js tests/*.js server.js --fix",
    "format": "prettier --write .",
    "db:migrate": "node scripts/db_migrate.js",
    "db:seed": "node scripts/db_seed.js",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "migrate": "node scripts/migrate-neo4j.js migrate",
    "migrate:status": "node scripts/migrate-neo4j.js status",
    "migrate:create": "node scripts/migrate-neo4j.js create",
    "docker:security": "bash scripts/docker-security-audit.sh",
    "docker:secrets": "bash scripts/generate-secrets.sh",
    "db:pgvector": "node scripts/setup_pgvector.js",
    "db:pgvector:adjust": "node scripts/adjust_pgvector_dimension.js",
    "embeddings:backfill": "node scripts/backfill_embeddings.js"
  },
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "@bull-board/api": "^5.11.2",
    "@bull-board/express": "^5.11.2",
    "apollo-server-express": "^3.12.0",
    "archiver": "^6.0.1",
    "argon2": "^0.31.2",
    "bullmq": "^4.17.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.9.0",
    "geolib": "^3.3.4",
    "graphql": "^16.8.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.12.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.7.0",
    "joi": "^17.13.3",
    "json2csv": "^5.0.7",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "natural": "^6.12.0",
    "neo4j-driver": "^5.11.0",
    "node-fetch": "^3.3.2",
    "node-nlp": "^4.27.0",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "puppeteer": "^22.13.0",
    "sentiment": "^5.0.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.1",
    "turf": "^3.0.14",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "jest-junit": "^16.0.0",
    "testcontainers": "^10.10.2",
    "@playwright/test": "^1.40.1",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "jest-environment-node": "^29.6.1",
    "jest-extended": "^4.0.2",
    "mongodb-memory-server": "^9.1.1",
    "cross-env": "^7.0.3",
    "wait-for-expect": "^3.0.2",
    "nock": "^13.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
